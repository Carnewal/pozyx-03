{
  "name": "pozyx03",
  "version": "1.0.0",
  "description": "Pozyx03 Indoor Positioning project.",
  "scripts": {
    "clean": "rimraf server/build && rimraf frontend/build",
    "build:frontend": "cross-env NODE_ENV=production webpack --config webpack.config.frontend.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "test:frontend": "ava frontend/test",
    "test:server": "ava server/test",
    "eslint:frontend": "eslint frontend/src",
    "eslint:server": "eslint server/src",
    "build": "npm run clean && npm run build:frontend && npm run build:server",
    "dev": "cross-env NODE_ENV=development nodemon start.js",
    "prod": "cross-env NODE_ENV=production node start.js",
    "start": "npm run build && npm run prod",
    "doc": "apidoc -i server/src/route -o server/public/apidoc"
  },
  "ava": {
    "require": ["babel-register", "babel-polyfill"],
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsaiDavid/simple-redux-boilerplate.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/tsaiDavid/simple-redux-boilerplate",
  "devDependencies": {
    "apidoc": "^0.17.5",
    "autoprefixer": "^6.3.1",
    "ava": "^0.18.2",
    "babel-core": "^6.3.15",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.3.1",
    "eslint-plugin-react": "^6.10.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.13.3",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "redux-logger": "^2.4.0",
    "rimraf": "^2.4.3",
    "sass-loader": "^6.0.2",
    "sequelize": "^3.30.2",
    "style-loader": "^0.13.0",
    "supertest": "^3.0.0",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "history": "^4.5.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  }
}
